{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "es2022",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "importHelpers": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "target": "es2022",
    "verbatimModuleSyntax": false,
    "types": ["svelte"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules/*",
    "dist/*",
    "__sapper__/*",
    "public/*"
  ]
}
